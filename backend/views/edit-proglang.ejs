<%- include('partials/header', { title: 'Edit Programming Language' }) %>

<div class="main-container">
    <h1>Edit programming language</h1>

    <form action="/proglang-edited/<%= progLang.id %>" method="POST">
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= progLang.name %>" required>
        </div>

        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" required><%= progLang.description %></textarea>
        </div>

        <button type="submit">Save Changes</button>
    </form>

    <a href="/proglangs">Cancel</a>
</div>

<%- include('partials/footer') %>